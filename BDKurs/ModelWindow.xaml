<Window x:Class="BDKurs.ModelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDKurs"
        mc:Ignorable="d"
        Title="Окно добавления" MinHeight="600" Height="600" MinWidth="400" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0 0 0 20">
            <StackPanel Grid.Row="0" x:Name="stack" Grid.RowSpan="2">

            </StackPanel>

        </ScrollViewer>
        <Button Grid.Row="1" Margin="30 0 30 20" Click="Button_Click" Content="Подтвердить" />
    </Grid>
</Window>
