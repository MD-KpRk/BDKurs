<UserControl x:Class="BDKurs.ModelControls.CheckBoxUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BDKurs.ModelControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" Margin="0 6 0 0" HorizontalAlignment="Left">
        <Viewbox x:Name="chb"  Height="30" Margin="30 0 0 0">
            <CheckBox x:Name="tb" Height="30" VerticalContentAlignment="Center" />
        </Viewbox>
        <Label x:Name="lb" Height="30" Margin="10 0 0 0" Padding="0 0 0 0" Content="" VerticalContentAlignment="Center" FontSize="14" />

    </StackPanel>
</UserControl>
